{
  "name": "@ruijadom/telescope-cli",
  "version": "0.1.1",
  "description": "Command line interface for Telescope",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruijadom/telescope.git",
    "directory": "packages/cli"
  },
  "author": "Rui Jadom <ruijadom@gmail.com>",
  "license": "MIT",
  "keywords": [
    "telescope",
    "cli",
    "developer-tools",
    "devtools"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "telescope": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@ruijadom/telescope-core": "*",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
